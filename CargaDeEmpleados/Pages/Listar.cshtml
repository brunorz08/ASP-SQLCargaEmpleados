@page
@model CargaDeEmpleados.Pages.ListarModel
@{
    var listado = Model.listaa.obtenerEmpleados();
   
    <style>

    table{
            border-collapse: collapse;
            width: 70%;
    }

        th, td {
            border: 1px solid black;
            padding: 8px;
        }
        p{
            font-size: 20px;
            
        }
    </style>
    <table border="1">
    
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Sector</th>
            <th>Borrar</th>
        </tr>
        @foreach (var item in listado)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.nombre</td>
                <td>@item.edad</td>
                <td>@item.sector</td>
                <td><a href="Borrar?id=@item.Id">Borrar</a></td>
            </tr>
        }
      
    </table>
    
  <hr />
    
    <p>TOTAL EMPLEADOS: @listado.Count()</p>
    
        
    

   
    
}
